    </Compile>
    <Compile Include="..\GVFS.Common\GVFSEnlistment.Shared.cs">
      <Link>Common\GVFSEnlistment.Shared.cs</Link>
    </Compile>
    <Compile Include="..\GVFS.Common\GVFSLock.Shared.cs">
      <Link>Common\GVFSLock.Shared.cs</Link>
